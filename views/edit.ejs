<% include ../views/partials/header %>
<form method="post" action="/todo/edit/<%= todo._id %>">
	<div>
		<label for="todo_name">Todo Name</label>
		<input id="todo_name" type="text" name="text" placeholder="Edit Todo" value="<%= todo.text %>">
	</div>
	<div>
		<label for="todo_body">Todo Body</label>
		<textarea id="todo_body" name="body" placeholder="Edit Body"><%= todo.body %></textarea>
	</div>
	<button type="submit">Submit</button> <a href="/">Cancel</a>
</form>
<% include ../views/partials/footer %>