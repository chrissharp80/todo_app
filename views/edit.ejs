<% include ../views/partials/header %>
<div class="row">
	<div class="col-md-6">
			<form method="post" action="/todo/edit/<%= todo._id %>">
				<div class="form-group">
					<label for="todo_name">Todo Name</label>
					<input id="todo_name" class="form-control" type="text" name="text" placeholder="Edit Todo" value="<%= todo.text %>">
				</div>
				<div class="form-group">
					<label for="todo_body">Todo Body</label>
					<textarea id="todo_body" class="form-control" name="body" placeholder="Edit Body"><%= todo.body %></textarea>
				</div>
				<br>
				<button class="btn btn-primary" type="submit">Submit</button> 
				<a href="/" class="btn btn-danger">Cancel</a>
			</form>
	</div>
</div>
<% include ../views/partials/footer %>