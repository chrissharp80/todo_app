<% include ../views/partials/header %>
	<form method="POST" action="/todo/add">
		<div>
			<label for="todo_name">Todo Name</label>
			<input id="todo_name" type="text" name="text" placeholder="Add Todo">
		</div>
		<div>
			<label for="todo_body">Todo Body</label>
			<textarea id="todo_body" name="body" placeholder="Add Body"></textarea>
		</div>
		<button type="submit">Submit</button>
	</form>
	<ul>
		<% todos.forEach(function(todo){ %>
			<li><%= todo.text %> - <%= todo.body %> <a data-id="<%= todo._id %>" href="#" class="delete-todo">Delete</a></li>
		<% }) %>
	</ul>
<% include ../views/partials/footer %>